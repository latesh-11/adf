
pipeline {
    agent any
    stages {
       stage('Trigger Pipeline B') {
            steps {
                script {
                    if (currentBuild.result == null || currentBuild.result == 'SUCCESS') {
                        build job: 'test/test_A/${env.BRANCH.NMAE}', wait: false
                    }
                }
            }
        }
        stage('Hello') {
            steps {
                echo "Current branch: ${env.BRANCH_NAME}"
                echo "Build Cause: ${env.BUILD_CAUSE}"
                echo 'Hello World'
            }
        }
    }
}
